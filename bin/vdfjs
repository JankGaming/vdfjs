#!/usr/bin/env node

var vdf = require('../vdf');
var fs = require('fs');

var argOptions = {
  alias: {
    'out': ['o']
  },
  default: {
    'out': 'out.json'
  }
};

var argv = require('minimist')(process.argv.slice(2), argOptions);

var fileData = fs.readFileSync(argv._[0], 'utf-8');
fs.writeFileSync(argv.out, vdf.parse(fileData));

console.log('Results written to ' + argv.out);
